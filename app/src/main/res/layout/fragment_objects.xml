<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="Объекты"
            android:textAlignment="center"
            android:textColor="#F1C69F"
            android:textSize="34sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonMountains"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="Горы"
                android:textColor="#000000"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonCaves"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Пещеры"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonLakes"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="Озера"
                android:textColor="#000000"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonWaterfalls"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Водопады"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonSpring"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="Источники"
                android:textColor="#000000"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonRocks"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Скалы"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonReservoirs"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text="Водохранилища"
                android:textColor="#000000"
                android:textSize="13sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/round_button"
                android:id="@+id/buttonRidges"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="Хребты"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewAssistant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Не знаете что выбрать?\n  Воспользуйтесь помощником "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/round_button"
            android:id="@+id/buttonAssistant"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="помошник"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>