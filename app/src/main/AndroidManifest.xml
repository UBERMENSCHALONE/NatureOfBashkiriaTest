<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khairetdinova.bashkiria">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bashkiria">
        <activity android:name=".activities.AuthorizationActivity"></activity>
        <activity android:name=".activities.AssistantActivity" />
        <activity android:name=".activities.ObjectActivity" />
        <activity android:name=".activities.ObjectsActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.SplashActivity"
                  android:theme="@style/Theme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>